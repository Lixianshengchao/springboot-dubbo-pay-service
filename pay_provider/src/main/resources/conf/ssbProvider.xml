<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.jp.common.pay.service.IOrderDetailService" ref="orderDetailService" />
    <dubbo:service interface="com.jp.common.pay.service.IOrderEvaluationImageService" ref="orderEvaluationImageService" />
    <dubbo:service interface="com.jp.common.pay.service.IOrderEvaluationService" ref="orderEvaluationService" />
    <dubbo:service interface="com.jp.common.pay.service.IOrderService" ref="orderService" />
    <dubbo:service interface="com.jp.common.pay.service.IPayDetailService" ref="payDetailService" />
    <dubbo:service interface="com.jp.common.pay.service.IPayService" ref="payService" />

</beans>